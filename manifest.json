{
    "manifest_version": 3,
    "name": "TORE Extension",
    "version": "1.0",
    "description": "This extension's used for translate, summarize,... any text selection.",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png"
        }
    },
    "icons": {
        "16": "images/icon-16.png"
    },
    "content_scripts": [{
        "js": ["scripts/content.js"],
        "matches": ["<all_urls>"]
    }]
}